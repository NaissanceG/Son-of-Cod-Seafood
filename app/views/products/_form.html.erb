<%= render "layouts/errors", :object => @product %>

<%= simple_form_for @product do |f| %>
  <%= f.input :image %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :species %>
  <%= f.input :price %>
  <%= f.input :origin %>
  <%= f.submit :submit, class: 'btn-success' %>
<% end %>
